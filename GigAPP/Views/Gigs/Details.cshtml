@model GigAPP.ViewModels.GigDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gig Details</h2>

<ul class="gigs voffset4">
    <h2>
        <span class="artist">@Model.Gig.Artist.Name</span>
        @if (Model.IsFollowing)
        {
            <button class="btn btn-info">
                Following
            </button>
        }
        else
        {
            <button class="btn btn-default">
                Follow?
            </button>
        }
    </h2>
    <li>Performing at @Model.Gig.Venue on @Model.Gig.DateTime.ToString("d MMM") at  @Model.Gig.DateTime.ToString("HH:mm")</li>

    @if (Model.IsAttending)
    {
        <li>You are attending this event!</li>
    }


</ul>